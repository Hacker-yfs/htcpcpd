pkgname=htcpcpd
pkgver=1.0
pkgrel=1
pkgdesc="An implementation of the \"Hyper-Text Coffee Pot Control Protocol\""
arch=('any')
url="http://gelendir.github.com/htcpcpd/"
license=('GPL3')
depends=('python2-distribute')
source=("http://gelendir.github.com/htcpcpd/htcpcpd.tar.bz2",
        "htcpcpd",
        "htcpcpd.ini")
md5sums=("698555955d92b0f86cd05dc61b91301b"
         "8835a5a694b1bec9b10270970336f0c4",
         "3aac4663cbe0f68b69c4efc9bdf35bdd")

build() {
  cd ${srcdir}/htcpcpd

  python2 setup.py install --root="${pkgdir}"  || return 1

  mkdir -p ${pkgdir}/var/run/
  mkdir -p ${pkgdir}/var/log/
  mkdir -p ${pkgdir}/etc/rc.d/
  cp ${startdir}/htcpcp ${pkgdir}/etc/rc.d/
  cp ${startdir}/htcpcp.ini ${pkgdir}/etc/
}

